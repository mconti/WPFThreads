<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <Button Click="StartButton_Click" Width="100"></Button>
            <Button Click="Button_Click" Width="100"></Button>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock x:Name="CounterLabel1" Height="60" FontSize="40"></TextBlock>
            <TextBlock x:Name="CounterLabel2" Height="60" FontSize="40"></TextBlock>
            <TextBlock x:Name="CounterLabel3" Height="60" FontSize="40"></TextBlock>
            </StackPanel>
    </Grid>
</Window>
